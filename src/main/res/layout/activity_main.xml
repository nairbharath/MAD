<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:text="Interest Calculator"

        android:textAlignment="center"

        android:textSize="30dp" />


    <TextView

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:text="------------------------------------------"

        android:textAlignment="center"

        android:textSize="30dp" />


    <EditText

        android:id="@+id/amt"

        android:layout_width="match_parent"

        android:layout_height="73dp"

        android:hint="Enter Amount"

        android:inputType="number"

        android:textAlignment="center" />


    <EditText

        android:id="@+id/interest"

        android:layout_width="match_parent"

        android:layout_height="76dp"

        android:hint="Enter Interest Rate (In %)"

        android:inputType="number"

        android:textAlignment="center" />


    <EditText

        android:id="@+id/tim"

        android:layout_width="match_parent"

        android:layout_height="69dp"

        android:hint="Enter Time (in Year)"

        android:inputType="number"

        android:textAlignment="center" />


    <EditText
        android:id="@+id/comp_years"
        android:layout_width="match_parent"
        android:layout_height="89dp"

        android:ems="0"
        android:hint="Compunding Months"
        android:inputType="textPersonName"
        android:text="Compunding months"
        android:textAlignment="center" />

    <Button

        android:id="@+id/btn"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Simple Interest" />


    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compund Interest" />

    <TextView

        android:id="@+id/txt1"

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:textSize="30dp" />


    <TextView

        android:id="@+id/txt2"

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:textSize="20dp" />


</LinearLayout>